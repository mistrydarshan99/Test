<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        >

    <TextView
            android:id="@+id/txtemailname"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/txttime"
            android:layout_toRightOf="@+id/userImage"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:singleLine="true"
            android:text="Darshan Mistry(BE)"
            android:textColor="@color/darkslate"
            android:textSize="18dp"
            android:textStyle="normal"
            android:typeface="normal"
            />

    <TextView
            android:id="@+id/txttime"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/darkslate"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="normal"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/txtemailsub"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/txtemailname"
            android:layout_below="@+id/txtemailname"
            android:layout_toRightOf="@+id/userImage"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="Project subject"
            android:textColor="@color/darkslate"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="normal"
            android:visibility="visible"/>

    <ImageView
            android:id="@+id/userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/images"
            />


</RelativeLayout>